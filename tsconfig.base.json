{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2019"],
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "declaration": true
  },
  "files": ["index.ts"],
  "include": ["src/**/*.ts", "**/*.d.ts"],
  "exclude": ["dist", "release", "node_modules"]
}
